package com.gmail.turq;

public class Cat {
	private String color;
	private int age;
	private double weight;
	private String breed;
	private double recreation = 0;

	public Cat(String color, int age, double weight, String breed) {
		super();
		this.color = color;
		this.age = age;
		this.weight = weight;
		this.breed = breed;
	}

	public Cat() {
		super();
	}

	public String getColor() {
		return color;
	}

	public void setColor(String color) {
		this.color = color;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public double getWeight() {
		return weight;
	}

	public void setWeight(double weight) {
		this.weight = weight;
	}

	public String getBreed() {
		return breed;
	}

	public void setBreed(String breed) {
		this.breed = breed;
	}

	public void meow() {
		System.out.println("meow");
	}

	public void relax(double a) {
		recreation = recreation + a;
	}

	public void walking(double a) {
		recreation = recreation + a;
	}

	public void sleep() {

	}

	@Override
	public String toString() {
		return "Cat [color=" + color + ", age=" + age + ", weight=" + weight + ", breed=" + breed + ", recreation="
				+ recreation + "]";
	}

}
